<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sr_login_transparents"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/hj_history_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/sr_login_white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hj_tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:text="@string/sr_login_cancel"
                android:textColor="@color/sr_login_blue_color"
                android:textSize="@dimen/sr_login_txt_16sp_size" />

            <TextView
                android:id="@+id/hj_tv_sure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="20dp"
                android:text="@string/sr_complete"
                android:textColor="@color/sr_login_blue_color"
                android:textSize="@dimen/sr_login_txt_16sp_size" />
        </LinearLayout>

        <ListView
            android:id="@+id/hj_history_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sr_login_white"
            android:divider="@drawable/person_line"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:listSelector="@color/sr_login_transparents"
            android:overScrollMode="never"
            android:scrollbars="vertical"></ListView>
    </LinearLayout>

</RelativeLayout>